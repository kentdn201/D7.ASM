@model D5.Models.Person;

@{
    ViewData["Title"] = "Add new Person";
}

<h1>This is create new member</h1>
<hr />

<div class="row">
    <div class="col-6-offset-3">
        <form asp-controller="Rookies" asp-action="Create" method="post">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-lable"></label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-lable"></label>
                <input asp-for="LastName" class="form-control" placeholder="Last name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-lable"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-lable"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="DateOfBirth">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-lable"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthPlace" class="control-lable"></label>
                <input asp-for="BirthPlace" class="form-control" placeholder="BirthPlace">
                <span asp-validation-for="BirthPlace" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back To List</a>
</div>
